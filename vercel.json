{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "npm install && npx playwright install chromium"
      }
    }
  ],
  "env": {
    "BROWSER": "chromium",
    "BROWSER_DISABLE_GPU": "true",
    "BROWSER_HEADLESS": "true",
    "BROWSER_GHOST_CURSOR": "false",
    "BROWSER_LOCALE": "en"
  }
} 